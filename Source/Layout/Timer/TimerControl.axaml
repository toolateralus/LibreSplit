<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:LibreSplit"
  x:Class="LibreSplit.TimerControl"
  x:DataType="local:TimerVM">
  <UserControl.Styles>
    <Style Selector="TextBlock.Inactive">
      <Setter Property="Foreground" Value="{Binding LayoutItem.InactiveColor.Value}" />
    </Style>
    <Style Selector="TextBlock.Ahead">
      <Setter Property="Foreground" Value="{Binding LayoutItem.AheadColor.Value}" />
    </Style>
    <Style Selector="TextBlock.Behind">
      <Setter Property="Foreground" Value="{Binding LayoutItem.BehindColor.Value}" />
    </Style>
  </UserControl.Styles>
  <Grid>
    <TextBlock
      Text="{Binding Timer.Elapsed, Converter={StaticResource TimeSpanToStringConverter}}"
      Margin="1" HorizontalAlignment="Right" FontFamily="Consolas, Courier New, monospace"
      FontSize="40" local:Setters.Classes="{Binding Classes}"/>
  </Grid>
</UserControl>