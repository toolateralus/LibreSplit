<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LibreSplit"
    x:Class="LibreSplit.TimerEditor"
    x:DataType="local:TimerEditor">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Text="Inactive Color" Grid.Row="0" Grid.Column="0"/>
    <TextBox Text="{Binding LayoutItem.InactiveColor.Value}" Grid.Row="0" Grid.Column="1"/>
    <TextBlock Text="Ahead Color" Grid.Row="1" Grid.Column="0"/>
    <TextBox Text="{Binding LayoutItem.AheadColor.Value}" Grid.Row="1" Grid.Column="1"/>
    <TextBlock Text="Behind Color" Grid.Row="2" Grid.Column="0"/>
    <TextBox Text="{Binding LayoutItem.BehindColor.Value}" Grid.Row="2" Grid.Column="1"/>
  </Grid>
</UserControl>