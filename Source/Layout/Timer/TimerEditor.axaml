<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LibreSplit"
    x:Class="LibreSplit.TimerEditor"
    xmlns:colorpicker="clr-namespace:AvaloniaColorPicker;assembly=AvaloniaColorPicker"
    x:DataType="local:TimerEditor">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Text="Inactive Color" Grid.Row="0" Grid.Column="0"/>
    <colorpicker:ColorButton Grid.Row="0" Grid.Column="1"
      Color="{Binding LayoutItem.InactiveColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Ahead Color" Grid.Row="1" Grid.Column="0"/>
    <colorpicker:ColorButton Grid.Row="1" Grid.Column="1"
      Color="{Binding LayoutItem.AheadColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Behind Color" Grid.Row="2" Grid.Column="0"/>
    <colorpicker:ColorButton Grid.Row="2" Grid.Column="1"
      Color="{Binding LayoutItem.BehindColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
  </Grid>
</UserControl>