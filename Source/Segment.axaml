<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LibreSplit.Controls.Segment">
    
    <Grid>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <Label Grid.Column="0" x:Name="titleLabel" Content="title"/>
      <Label Grid.Column="1" x:Name="segmentTimeLabel" Content="segmentTime"/>
      <Label Grid.Column="2" x:Name="splitTimeLabel" Content="splitTime"/>
  </Grid>

</UserControl>