<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LibreSplit.MainWindow"
        xmlns:controls="clr-namespace:LibreSplit.Controls;assembly=LibreSplit"
        Title="LibreSplit">
    <DockPanel>
    <Menu DockPanel.Dock="Top">
        <MenuItem Header="File">
        <MenuItem Header="New" Click="NewFileMethod"/>
        <MenuItem Header="Open" Click="OpenFileMethod"/>
        <MenuItem Header="Save" Click="SaveFileMethod"/>
        <MenuItem Header="Save As" Click="SaveAsFileMethod"/>
    </MenuItem>
    <MenuItem Header="Edit">
        <MenuItem Header="Edit Splits" Click="EditSplitsMethod"/>
    </MenuItem>
    <MenuItem Header="Preferences">
        <MenuItem Header="Themes" Click="ThemesMethod"/>
    </MenuItem>
    </Menu>
    <StackPanel x:Name="segmentStackPanel" Orientation="Vertical"> 
        <!-- <controls:Segment/> -->
    </StackPanel>
    </DockPanel>
</Window>
