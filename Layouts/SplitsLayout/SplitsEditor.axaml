<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:LibreSplit.Layouts.SplitsLayout"
  xmlns:colorpicker="clr-namespace:AvaloniaColorPicker;assembly=AvaloniaColorPicker"
  x:Class="LibreSplit.Layouts.SplitsLayout.SplitsEditor"
  x:DataType="local:SplitsEditor">
  <Grid HorizontalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock Text="Active Backgound Color" Grid.Row="0" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="0" Grid.Column="1"
      Color="{Binding LayoutItem.ActiveSplitColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Inactive Backgound Color" Grid.Row="1" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="1" Grid.Column="1"
      Color="{Binding LayoutItem.InactiveSplitColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Ahead Gaining Time Color" Grid.Row="2" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="2" Grid.Column="1"
      Color="{Binding LayoutItem.AheadGainingTimeColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Ahead Losing Time Color" Grid.Row="3" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="3" Grid.Column="1"
      Color="{Binding LayoutItem.AheadLosingTimeColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Behind Gaining Time Color" Grid.Row="4" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="4" Grid.Column="1"
      Color="{Binding LayoutItem.BehindGainingTimeColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Behind Losing Time Color" Grid.Row="5" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="5" Grid.Column="1"
      Color="{Binding LayoutItem.BehindLosingTimeColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
    <TextBlock Text="Text Color" Grid.Row="6" Grid.Column="0" />
    <colorpicker:ColorButton Grid.Row="5" Grid.Column="1"
      Color="{Binding LayoutItem.TextColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
  </Grid>
</UserControl>