<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:timing="clr-namespace:LibreSplit.Timing"
  xmlns:ls="clr-namespace:LibreSplit"
  xmlns:local="clr-namespace:LibreSplit.Layouts.SumOfBest" 
  x:Class="LibreSplit.Layouts.SumOfBest.Control"
  x:DataType="local:ViewModel">

  <Grid> 
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <TextBlock
      Grid.Column="0"
      Text="Sum of Best Segments"
      Margin="1,1,10,1"
      HorizontalAlignment="Left"
      FontSize="14"/>

    <TextBlock
      Grid.Column="1"
      Text="{Binding SumOfBest, Converter={StaticResource NullableTimeSpanToStringConverter}}"
      Margin="1,1,10,1"
      HorizontalAlignment="Right"
      FontSize="18"/>
  </Grid>
</UserControl>