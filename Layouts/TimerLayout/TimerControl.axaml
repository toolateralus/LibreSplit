<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ls="clr-namespace:LibreSplit"
  xmlns:local="clr-namespace:LibreSplit.Layouts.TimerLayout"
  x:Class="LibreSplit.Layouts.TimerLayout.TimerControl"
  x:DataType="local:TimerViewModel">
  <Grid Background="{Binding LayoutItem.BackgroundColor}">
    <TextBlock
      Text="{Binding Timer.Elapsed, Converter={StaticResource NullableTimeSpanToStringConverter}}"
      Margin="1,1,10,1" HorizontalAlignment="Right"
      FontSize="40" ls:Setters.Classes="{Binding Classes}"/>
  </Grid>
</UserControl>