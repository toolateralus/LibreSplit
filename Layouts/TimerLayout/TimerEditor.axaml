<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:LibreSplit.Layouts.TimerLayout"
  x:Class="LibreSplit.Layouts.TimerLayout.TimerEditor"
  xmlns:c="clr-namespace:AvaloniaColorPicker;assembly=AvaloniaColorPicker"
  x:DataType="local:TimerEditor">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Column="0" Text="Background Color" />
    <c:ColorButton Grid.Column="1" Color="{Binding LayoutItem.BackgroundColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
  </Grid>
</UserControl>